<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Estilo para a bolha atras do email e senha-->
    <style name="ContainerComponents">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/container_components</item>
        <item name="android:layout_margin">20dp</item>

    </style>

    <!--Estilo para os campos de email e senha-->
    <style name="Edit_Text">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">15dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">10dp</item>


    </style>
    <!--Estilo para o botÃ£o, dentro da bolha-->
    <style name="botao">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@drawable/botao</item>
        <item name="android:padding">22dp</item>
        <item name="android:textColor">@color/roxo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="textAllCaps">false</item>
    </style>
    
    
    
    
    
    
    
</resources>